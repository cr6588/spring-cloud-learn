<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo  
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 记录日志的方法使用异步调用 -->
    <dubbo:reference interface="com.sjdf.erp.facade.service.LogFacade" id="logFacade" check="false" retries="0">
        <dubbo:method name="addSaveLog" async="true" return="false" />
        <dubbo:method name="addUpdateLog" async="true" return="false" />
        <dubbo:method name="addDeleteLog" async="true" return="false" />
    </dubbo:reference>
    <!-- 缓存 -->
    <dubbo:reference interface="com.sjdf.erp.common.facade.CacheFacade" id="cacheFacade"/>
</beans>